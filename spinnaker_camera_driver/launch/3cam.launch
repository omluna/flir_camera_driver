<launch>
  <!-- Common parameters -->
  <arg name="camera_name" default="stereo" />
  <arg name="frame_rate" default="10" />

  <arg name="left_camera_serial" default="18566205" />
  <arg name="left_camera_calibrated" default="0" />

  <arg name="right_camera_serial" default="18584971" />
  <arg name="right_camera_calibrated" default="0" />

  <arg name="back_camera_serial" default="18566208" />
  <arg name="back_camera_calibrated" default="0" />

  <arg name="acquisition_frame_rate" default="10" />
  <arg name="acquisition_frame_rate_enable" default="true"/>
  <arg name="image_format_color_coding" default="BayerRG8"/>
  <arg name="ieee1588_enable" default="true"/>
  <arg name="enable_trigger" default="On"/>
  <arg name="timeout" default="0"/>
  <arg name="trigger_overlap_mode" default="ReadOut"/>


<node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />
  <group ns="$(arg camera_name)" >
    <group ns="left" >

      <!-- Both cameras are not loaded into one nodelet manager to avoid the namespacing issue. -->
      <node pkg="nodelet" type="nodelet" name="camera_nodelet"
            args="load spinnaker_camera_driver/SpinnakerCameraNodelet /camera_nodelet_manager" >
        <param name="frame_id" value="camera_left" />
        <param name="serial" value="$(arg left_camera_serial)" />
        <param name="acquisition_frame_rate" value="$(arg acquisition_frame_rate)" />
        <param name="acquisition_frame_rate_enable" value="$(arg acquisition_frame_rate_enable)" />
        <param name="image_format_color_coding" value="$(arg image_format_color_coding)" />
        <param name="ieee1588_enable" value="$(arg ieee1588_enable)" />
        <param name="enable_trigger" value="$(arg enable_trigger)" />
        <param name="timeout" value="$(arg timeout)" />
        <param name="trigger_overlap_mode" value="$(arg trigger_overlap_mode)" />

        <!-- When unspecified, the driver will use the default framerate as given by the
             camera itself. Use this parameter to override that value for cameras capable of
             other framerates. -->
        <param name="frame_rate" value="$(arg frame_rate)" />

        <!-- Use the camera_calibration package to create this file -->
        <param name="camera_info_url" if="$(arg left_camera_calibrated)"
               value="file://$(env HOME)/.ros/camera_info/$(arg left_camera_serial).yaml" />
      </node>

      <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer /camera_nodelet_manager">
      </node>
    </group>

    <group ns="right" >

      <node pkg="nodelet" type="nodelet" name="camera_nodelet"
            args="load spinnaker_camera_driver/SpinnakerCameraNodelet /camera_nodelet_manager" >
        <param name="frame_id" value="camera_right" />
        <param name="serial" value="$(arg right_camera_serial)" />
        <param name="acquisition_frame_rate" value="$(arg acquisition_frame_rate)" />
        <param name="acquisition_frame_rate_enable" value="$(arg acquisition_frame_rate_enable)" />
        <param name="image_format_color_coding" value="$(arg image_format_color_coding)" />
        <param name="ieee1588_enable" value="$(arg ieee1588_enable)" />
        <param name="enable_trigger" value="$(arg enable_trigger)" />
        <param name="timeout" value="$(arg timeout)" />
        <param name="trigger_overlap_mode" value="$(arg trigger_overlap_mode)" />

        <!-- When unspecified, the driver will use the default framerate as given by the
             camera itself. Use this parameter to override that value for cameras capable of
             other framerates. -->
        <param name="frame_rate" value="$(arg frame_rate)" />

        <!-- Use the camera_calibration package to create this file -->
        <param name="camera_info_url" if="$(arg right_camera_calibrated)"
               value="file://$(env HOME)/.ros/camera_info/$(arg right_camera_serial).yaml" />
      </node>

      <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer /camera_nodelet_manager">
      </node>

    </group>

    <group ns="back" >

      <node pkg="nodelet" type="nodelet" name="camera_nodelet"
            args="load spinnaker_camera_driver/SpinnakerCameraNodelet /camera_nodelet_manager" >
        <param name="frame_id" value="camera_back" />
        <param name="serial" value="$(arg back_camera_serial)" />
        <param name="acquisition_frame_rate" value="$(arg acquisition_frame_rate)" />
        <param name="acquisition_frame_rate_enable" value="$(arg acquisition_frame_rate_enable)" />
        <param name="image_format_color_coding" value="$(arg image_format_color_coding)" />
        <param name="ieee1588_enable" value="$(arg ieee1588_enable)" />
        <param name="enable_trigger" value="$(arg enable_trigger)" />
        <param name="timeout" value="$(arg timeout)" />
        <param name="trigger_overlap_mode" value="$(arg trigger_overlap_mode)" />

        <!-- When unspecified, the driver will use the default framerate as given by the
             camera itself. Use this parameter to override that value for cameras capable of
             other framerates. -->
        <param name="frame_rate" value="$(arg frame_rate)" />

        <!-- Use the camera_calibration package to create this file -->
        <param name="camera_info_url" if="$(arg back_camera_calibrated)"
               value="file://$(env HOME)/.ros/camera_info/$(arg back_camera_serial).yaml" />
      </node>

      <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer /camera_nodelet_manager">
      </node>

    </group>

<!--     <node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc">
      <param name="approximate_sync" value="true"/>
    </node> -->

  </group>
</launch>
